<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>TP_JAVA_EE_Facturation</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>HomepageServlet</servlet-name>
		<servlet-class>fr.epsi.controller.HomepageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HomepageServlet</servlet-name>
		<url-pattern>/Homepage</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ClientsServlet</servlet-name>
		<servlet-class>fr.epsi.controller.ClientsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ClientsServlet</servlet-name>
		<url-pattern>/clients</url-pattern>
	</servlet-mapping>
	
	<servlet>
	  <servlet-name>ArticlesServlet</servlet-name>
	  <servlet-class>fr.epsi.controller.ArticlesServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	   <servlet-name>ArticlesServlet</servlet-name>
	   <url-pattern>/articles</url-pattern>
	</servlet-mapping>
	
	<servlet>
	  <servlet-name>FacturesServlet</servlet-name>
	  <servlet-class>fr.epsi.controller.FacturesServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	   <servlet-name>FacturesServlet</servlet-name>
	   <url-pattern>/factures</url-pattern>
	</servlet-mapping>
	
	
		<servlet>
	  <servlet-name>AddClientsServlet</servlet-name>
	  <servlet-class>fr.epsi.controller.AddClientsServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	   <servlet-name>AddClientsServlet</servlet-name>
	   <url-pattern>/add/client</url-pattern>
	</servlet-mapping>
	
	<servlet>
	  <servlet-name>AddArticlesServlet</servlet-name>
	  <servlet-class>fr.epsi.controller.AddArticlesServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	   <servlet-name>AddArticlesServlet</servlet-name>
	   <url-pattern>/add/article</url-pattern>
	</servlet-mapping>
	
	<servlet>
	  <servlet-name>FacturesDetailsServlet</servlet-name>
	  <servlet-class>fr.epsi.controller.FacturesDetailsServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	   <servlet-name>FacturesDetailsServlet</servlet-name>
	   <url-pattern>/FactureDetails</url-pattern>
	</servlet-mapping>
	
	

</web-app>